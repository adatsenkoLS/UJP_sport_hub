 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class = "register-header"><% t "registration_page.create_account"%></h2>
   <h2 class="log-in-text">Create account</h2>
    
    <ul class="Login-with">
        <li><a href="" > <%= image_tag("for-register-images/facebook-register-icon.svg", :class=>"register-image")%></a></li>  
        <li><a href="" ><%= image_tag("for-register-images/gmail-register-icon.svg", :class=>"register-image")%></a></li>            
  </ul>  
    
    <%= f.label t("registration_page.use_email"), :class=>"enterEmail" %>
   
    <div class = "first-last-names-fields">
        <div >
        <%= f.label :first_name,:class => "login-text"%><br />
        <%= f.text_field :first_name ,autofocus: true, autocomplete: "first_name",:class=>"input-login", :placeholder => "John"%>
        </div>

        <div >
          <%= f.label :last_name,:class => "login-text"%><br />
          <%= f.text_field :last_name ,autofocus: true, autocomplete: "last_name",:class=>"input-login",:placeholder => "Doe"%>
        </div>
    </div>    

    <div class="field">
      <%= f.label :email,:class => "login-text"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"input-login",:placeholder => "jonhdoe@gmail.com"%>
    </div>

    <div class="field">
      <%= f.label :password,:class => "login-text"%><br />
      <% if @minimum_password_length %>
  <%= f.password_field :password, autocomplete: "new-password" ,:class=>"input-login",
      :placeholder => "#{(t("registration_page.fields.password_minimum_characters", count: @minimum_password_length))}"%>
      <% end %>
      
    </div>

    
    <%= f.submit t("registration_page.buttons_and_links.sign_up"),:class=>"login-buton" %>
  
    <% end %>
  