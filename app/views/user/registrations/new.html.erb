
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class = "register-header"><% t "registration_page.create_account"%></h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class = "first-last-names-fields">
        
        <div>
        <%= f.label :first_name,:class=>"login-text"%><br />
        <%= f.text_field :first_name ,autofocus: true, autocomplete: "first_name",:class=>"input-login"%>
        </div>

        <div>
          <%= f.label :last_name,:class=>"login-text"%><br />
          <%= f.text_field :last_name ,autofocus: true, autocomplete: "last_name",:class=>"input-login"%>
        </div>
    </div>    

    <div class="form-group">
      <%= f.label :email ,:class=>"login-text"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"input-login"%>
    </div>

    <div class="form-group">
      <%= f.label :password ,:class=>"login-text"%><br>
      <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "new-password" ,:class=>"input-login" , :placeholder=>  
      "#{t("registration_page.fields.password_minimum_characters", count: @minimum_password_length)}"%>
      <% end %><br />
      
    </div>

    <div class="actions register-confirm-btn">
    <%= f.submit t "registration_page.buttons_and_links.sign_up", :class => "login-buton" %>
    </div>
    <% end %>


