<div class="news_partners_edit_form">

<%= form_with model: @news_partner, method: :put do |form| %>
    <div class="form-row align-items-center">

        <div class="form-group col-md-6">
            <%= form.label :news_partners_api_key, "API KEY"%>
            <%= form.text_field :news_partners_edit_form_api_key %>
        </div>

        <div class="form-group col-md-6">
            <%= form.label :news_partners_default_sources, "DEFAULT SOURCES" %>
            <%= form.text_field :news_partners_edit_form_default_sources %>
        </div>

    </div>

    <div class="form-check">
        <%= form.collection_check_boxes :category_id, Category.order(:name), :id, :name, class:"form-check-input"%>
    </div>

<% end %>

</div>