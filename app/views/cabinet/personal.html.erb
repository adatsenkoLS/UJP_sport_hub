<%= render "shared" %>

 <%= image_tag "cabinet/light.webp", class: "profile_image rounded mx-auto d-block" %>

<%= form_with method: :get do |form| %>


  <%= form.label :first_name, "FIRST NAME" %>
  <%= form.text_field :first_name, class:"personal_field", maxlength: 40, placeholder: "Enter your first name here", required: "true" %>

  <%= form.label :last_name, "LAST NAME" %>
  <%= form.text_field :last_name, class: "personal_field", maxlength: 40, placeholder: "Enter your last name here", required: "true" %>

  <%= form.label :email, "EMAIL" %>
  <%= form.email_field :email, class: "personal_field", maxlength: 40, required: "true" %>

  <%= form.submit "UPDATE PROFILE", class: "form_submit" %>
  
<% end %>
  