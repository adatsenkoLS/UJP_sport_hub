<%= render "shared" %>

<%= form_with do |form| %>

  <%= form.label :old_password, "OLD PASSWORD" %>
  <%= form.password_field :old_password, maxlength: 40, placeholder: "Enter your old password here" %>

  <%= form.label :new_password, "NEW PASSWORD" %>
  <%= form.password_field :new_password, maxlength: 40, placeholder: "8+ characters(letters and numbers" %>

  <%= form.label :password_confirmation, "PASSWORD CONFIRMATION" %>
  <%= form.password_field :password_confirmation, maxlength: 40, placeholder: "Enter new password again" %>

  <%= form.submit "CHANGE PASSWORD", class: "form_submit" %>
  
<% end %>
  