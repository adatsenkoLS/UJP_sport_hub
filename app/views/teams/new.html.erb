<%= render "cabinet/shared" %>
<div class="cabinet-form">
<%= form_with model: @team do |form| %>
  <div class="form-group">
    <%= form.label :team_name, class: "login-text" %><br>
    <%= form.text_field :team_name,:class=>"input-login" %>
    <% @team.errors.full_messages_for(:team_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "login-text" %><br>
    <%= form.text_field :email,:class=>"input-login" %><br>
    <% @team.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit "Create Team",:class=>"login-buton"%>
  </div>
<% end %>

</div>