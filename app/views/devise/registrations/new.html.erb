
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class = "register-header"><% t "registration_page.create_account"%></h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class = "first-last-names-fields">
        <div class="field firstname">
        <%= f.label :first_name%><br />
        <%= f.text_field :first_name ,autofocus: true, autocomplete: "first_name",:class=>"input-field short"%>
        </div>

        <div class="field lastname">
          <%= f.label :last_name%><br />
          <%= f.text_field :last_name ,autofocus: true, autocomplete: "last_name",:class=>"input-field short"%>
        </div>
    </div>    

    <div class="field">
      <%= f.label :email%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"input-field long"%>
    </div>

    <div class="field">
      <%= f.label :password%>
      <% if @minimum_password_length %>
      <em>(<%= t("registration_page.fields.password_minimum_characters", count: @minimum_password_length)%>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" ,:class=>"input-field long"%>
    </div>

    <div class="actions register-confirm-btn">
    <%= f.submit t "registration_page.buttons_and_links.sign_up" %>
    </div>
    <% end %>
  




