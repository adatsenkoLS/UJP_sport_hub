<!DOCTYPE html>
<html>
  <head>
  <%# TEXT EDITOR %>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
      tinymce.init({
        selector: '.tinymce',
        height: 500,
        menubar: false,
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table paste code help wordcount'
        ],
          toolbar: 'undo redo | formatselect | ' +
          ' bold italic backcolor | alignleft aligncenter ' +
          ' alignright alignjustify | bullist numlist outdent indent | ' +
          ' removeformat | help'
      });
    </script>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
  </head>
  <body>
    <%= render "users/articles/admin_navbar"%>
    <div class="container-btw-header-nav">
      <div class="container-logo">
      <% if  controller_name == "teams"%>
        <h2 id="current-menu-item">Teams</h2>
      <% else%>
        <h2 id="current-menu-item">NBA</h2>
      <% end %>
      </div>
      <% if controller_name == "articles"%>
        <button class="btn-new-post btn-new-article">+ New Article</button>
      <% end %>
      <% if  controller_name == "teams"%>
        <%= link_to '+ Add team', '/users/teams/new', class: "btn-new-post btn-new-article link-admin-add", method: :get %> 
      <% end %>
    </div>
    <div class="container-navbar">
      <nav>
        <div class="container-left-icon-btn">
          <button class="btn-new-post iconed icon-arrow-left"></button>
        </div>

        <!-- it may be button or link. -->
        <!-- depends on  -->

        <div class="container-opts">
          <span class="nav-opt">home</span>
          <span class="nav-opt">nba</span>
          <span class="nav-opt">nfl</span>
          <span class="nav-opt">mlb</span>
          <span class="nav-opt">nhl</span>
          <span class="nav-opt">cbb</span>
          <span class="nav-opt">cfb</span>
          <span class="nav-opt">nascar</span>
          <span class="nav-opt">golf</span>
          <span class="nav-opt">video</span>
          <span class="nav-opt">lifestyle</span>
          <span class="nav-opt">dealbook</span>
        </div>

        <button class="btn-new-post iconed icon-arrow-right"></button>
      </nav>
    </div>
    <div class="main-page">
      <div class="container-left-icons">
        <button class="btn-new-post iconed surveys"></button>
        <button class="btn-new-post iconed banners"></button>
        <button class="btn-new-post iconed languages"></button>
        <button class="btn-new-post iconed footer"></button>
        <button class="btn-new-post iconed social-networks"></button>
        <button class="btn-new-post iconed users"></button>
        <button class="btn-new-post iconed ia"></button>
        <!--Make teams button -->
        <%= link_to '', '/users/teams', class: "btn-new-post iconed teams", method: :get %> 
        <!------------------------------------->
        <button class="btn-new-post iconed new-partners"></button>
        <button class="btn-new-post iconed advertising"></button>
      </div>
      <div class="container-main-content-all">
        <% flash.each do |type, msg| %>
          <% if type == 'success'%>
              <div class= "alert-mes-success">
                <%= image_tag("teams/success.png",:class => "add-mess-team-img")%>
                <span class= "closebtn" onclick = "this.parentElement.style.display='none'">&times;</span>
                <strong>Your team is successfully added</strong>
                This team is added to your IA
             </div>
          <% elsif type == 'warning'%>
            <div class= "alert-mes-success">
                 <%= image_tag("teams/success.png",:class => "add-mess-team-img")%>
                <span class= "closebtn" onclick = "this.parentElement.style.display='none'">&times;</span>
                <strong>Deleted!</strong>
                The team is successfully deleted.
             </div>
          <% end %>  
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
