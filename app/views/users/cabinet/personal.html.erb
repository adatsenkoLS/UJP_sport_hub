<%= render "shared" %>



<%= image_tag "cabinet/light.webp", class: "profile_image rounded-circle mx-auto d-block" %>

<div class="cabinet-form">

  <%= form_with model: @user, method: :put do |form|  %>

    <div class="form-group">
      <%= form.label :first_name, "FIRST NAME", :class => "login-text" %> 
      <%= form.text_field :first_name, :class=>"input-login", maxlength: 40, placeholder: "Enter your first name here",
      value: current_user ? current_user.first_name : "" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "LAST NAME", :class => "login-text" %>
      <%= form.text_field :last_name, :class=>"input-login", maxlength: 40, placeholder: "Enter your last name here",
      value: current_user ? current_user.last_name : "" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "EMAIL",:class => "login-text" %>
      <%= form.email_field :email, :class=>"input-login", maxlength: 40, placeholder: "Enter your email here",
      value: current_user ? current_user.email : "" %>
    </div>

    <%= form.submit "UPDATE PROFILE", :class=>"login-buton" %>
  
  <% end %>
</div>