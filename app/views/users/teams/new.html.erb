<div class="cabinet-form">

<div class= "map-team">
    <%= image_tag("teams/Map.png")%>
</div>



<%= simple_form_for @team, url: users_teams_path, method: :post do |form| %>
  
  <div class="form-group combobox-teams">
    <%= form.label :select_location,class: "login-text"%><br>
    <%= collection_select(:team, :city_id, City.all,:id, :team_country) %>
  </div>
  

    <div class="form-group combobox-teams">
    <%= form.label :select_category,class: "login-text"%><br>
    <%= collection_select(:team, :city_id, Category.all,:id, :name)   %>
  </div>


  <div class="form-group combobox-teams">
    <%= form.label :select_category,class: "login-text"%><br>
    <%= collection_select(:team, :city_id, Subcategory.all,:id, :name) %>
  </div>


  <div class="form-group">
    <%= form.label :team_name, class: "login-text" %><br>
    <%= form.text_field :team_name,:class=>"input-login" %>
    <% @team.errors.full_messages_for(:team_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "login-text" %><br>
    <%= form.text_field :email,:class=>"input-login" %><br>
    <% @team.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit "Create Team",:class=>"login-buton"%>
  </div>
<% end %>

</div>