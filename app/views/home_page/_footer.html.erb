            <%= link_to "COMPANY INFO","#",:id => "footer-info"%>
            <ul class="ul-info">
                <li class=" ul-items-footer"><%= link_to "About Sports Hub","#"%></li>
                <li class=" ul-items-footer"><%= link_to "News / In the Press","#"%></li>
